<!DOCTYPE html>
<html>
  <head>
    <title>Till</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('till_favicon.png'), :rel => 'icon', :type =>  'image/png' %>

    <link href="https://fonts.googleapis.com/css?family=Raleway:400,600,800" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <% if flash[:notice].present? || flash[:alert].present? %>
      <%= render partial: 'shared/flash_banner' %>
    <% end %>
    <%= render partial: 'header/index' %>

    <%= yield %>

    <%= render partial: 'footer/footer' %>
  </body>
</html>
